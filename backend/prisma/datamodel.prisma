type User {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  gitHubId: ID! @unique
  boards: [Board!]! @relation(name: "UserBoards", onDelete: CASCADE)
}

type Board {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  owner: User! @relation(name: "UserBoards")
  name: String!
  query: String!
  columns: [Column!]! @relation(name: "BoardColumns", onDelete: CASCADE)
}

type Column {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  board: Board! @relation(name: "BoardColumns")
  index: Int!
  name: String!
  query: String!
}
